@model Flashcard

<h1 style="margin-top:20px;">Edit</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-4" style=" margin-top:10px;">
    <div class="form-group">
        <label asp-for="SourceWord" class="control-label">Source Word</label>
        <input asp-for="SourceWord" class="form-control" />
    </div>
    </div>
    <div class="col-md-4" style=" margin-top:10px;">
    <div class="form-group">
        <label asp-for="TranslatedWord" class="control-label">Translated Word</label>
        <input asp-for="TranslatedWord" class="form-control" />
    </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-register text-light" style=" margin-top:10px;" />
    </div>
</form>
