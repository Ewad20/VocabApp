@{
}
<h1>
    Tests:
</h1>
<div class="container row">
    <div class="col my-3"
         style="min-width:30%">
        <div class="card h-100 w-100 text-center d-flex flex-column align-items-center justify-content-center">
            <h2><a class="card-link" style="text-decoration:none" href="@Url.Action("AddTest", "Test")">Add new test</a></h2>
        </div>
    </div>
    @if (ViewBag.tests != null)
    {
        foreach (var test in ViewBag.tests)
        {
            <div class="col my-3">
                <div class="card h-100 w-100 d-flex flex-column align-items-center justify-content-center text-center">
                    <h2>@test.Name</h2>
                    <a class="my-3 w-auto btn btn-primary" asp-action="Details" asp-route-Id="@test.Id">Details</a>
                    <a class="my-3 w-auto btn btn-primary" asp-action="Testing" asp-route-Id="@test.Id">Start Test</a>
                    <a class="my-3 w-auto btn btn-primary" asp-action="Delete" asp-route-Id="@test.Id">Delete test</a>
                </div>
            </div>
        }
    }
</div>